<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Dynamic Directory Index</title>

</head>

<body>
  <% @files.each do |file| %>
    <a href="<%= file %>"><%= file %></a><br>
  <% end %>
  
  <% if params[:sort] == "desc" %>
    <a href="/">Sort ascending</a>
  <% else %>
    <a href="/?sort=desc">Sort Descending</a>
  <% end %>
</body>
</html>
