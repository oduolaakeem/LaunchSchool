<!doctype html>
<html>
  <head>
    <title>File-Based CMS</title>
    <!--<link rel="stylesheet" href="/stylesheets/reset.css">-->
    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>
  <body>
    <header>
      <% if session[:error] %>
        <p><%= session.delete(:error) %></p>
      <% end %>
      <% if session[:success] %>
        <p><%= session.delete(:success) %></p>
      <% end %>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>